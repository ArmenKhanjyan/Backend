doctype html
html
  head
    title User List
    style.
      body {
        font-family: Arial, sans-serif;
        background-color: #f9f9f9;
        padding: 20px;
      }
      h1 {
        color: #333;
        text-align: center;
      }
      ul {
        list-style: none;
        padding: 0;
        max-width: 400px;
        margin: 20px auto;
      }
      li {
        background-color: #fff;
        margin-bottom: 10px;
        padding: 15px 20px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      .user-name {
        font-weight: bold;
        color: #555;
      }
      .actions a {
        margin-left: 10px;
        text-decoration: none;
        color: #007BFF;
      }
      .actions a:hover {
        text-decoration: underline;
      }
  body
    h1 User List
    ul
      each user in users
        li
          span.user-name-age Name:#{user.name} Surname:#{user.surname} Age:#{user.age} 

        
